{
	"name": "nemo",
	"displayName": "Nemo",
	"description": "Pull, edit, test, and push Aquarium protocols.",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.30.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:aquariumTree"
	],
	"main": "./extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "aquarium-explorer",
					"title": "Package Explorer",
					"icon": "media/aquarium.svg"
				}
			]
		},
		"views": {
			"aquarium-explorer": [
				{
					"id": "aquariumTree",
					"name": "Aquarium"
				}
			]
		},
		"commands": [
			{
				"command": "extension.connect",
				"title": "Download Directory",
				"category": "Nemo",
				"icon": {
					"light": "resources/light/download.svg",
					"dark": "resources/dark/download.svg"
				}
			},
			{
				"command": "extension.openCode",
				"title": "Open Code",
				"category": "Nemo"
			},
			{
				"command": "extension.pullCode",
				"title": "Pull",
				"icon": {
					"light": "resources/light/download.svg",
					"dark": "resources/dark/download.svg"
				}
			},
			{
				"command": "extension.pushCode",
				"title": "Push",
				"icon": {
					"light": "resources/light/upload.svg",
					"dark": "resources/dark/upload.svg"
				}
			},
			{
				"command": "extension.showStatus",
				"title": "Status",
				"icon": {
					"light": "resources/light/status.svg",
					"dark": "resources/dark/status.svg"
				}
			},
			{
				"command": "extension.test",
				"title": "Test",
				"icon": {
					"light": "resources/light/test.svg",
					"dark": "resources/dark/test.svg"
				}
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "extension.connect",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "extension.pullCode",
					"when": "viewItem == CodeItem",
					"group": "inline"
				},
				{
					"command": "extension.pushCode",
					"when": "viewItem == CodeItem",
					"group": "inline"
				},
				{
					"command": "extension.showStatus",
					"when": "viewItem == CodeItem",
					"group": "inline"
				},
				{
					"command": "extension.pullCode",
					"when": "viewItem == TestCodeItem",
					"group": "inline"
				},
				{
					"command": "extension.pushCode",
					"when": "viewItem == TestCodeItem",
					"group": "inline"
				},
				{
					"command": "extension.showStatus",
					"when": "viewItem == TestCodeItem",
					"group": "inline"
				},
				{
					"command": "extension.test",
					"when": "viewItem == TestCodeItem",
					"group": "inline"
				}
			]
		},
		"configuration": {
			"type": "object",
			"title": "Nemo",
			"properties": {
				"nemo.localAquariumServerUrl": {
					"type": "string",
					"default": "http://localhost:3000"
				},
				"nemo.localAquariumServerUser": {
					"type": "string",
					"default": "neptune"
				},
				"nemo.localAquariumServerPassword": {
					"type": "string",
					"default": "aquarium"
				}
			}
		}
	},
	"scripts": {
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"@types/mocha": "^2.2.42",
		"@types/node": "^8.10.40",
		"eslint": "^4.19.1",
		"extend": "^3.0.2",
		"request": "^2.88.0",
		"typescript": "^3.3.3",
		"underscore": "^1.9.1",
		"vscode": "^1.1.29"
	},
	"dependencies": {
		"fs-extra": "^7.0.1",
		"ejs": "latest"
	}
}
